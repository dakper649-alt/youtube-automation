{
  "name": "youtube-automation-studio",
  "version": "1.0.0",
  "description": "AI-powered YouTube video generation",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac"
  },
  "build": {
    "appId": "com.youtubeautomation.studio",
    "productName": "YouTube Automation Studio",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": ["dmg", "zip"]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "**/*",
      "!backend/**/*",
      "!remotion-renderer/**/*",
      "!venv/**/*"
    ]
  },
  "dependencies": {
    "electron": "^28.0.0",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  }
}
